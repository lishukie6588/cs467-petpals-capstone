#:kivy 2.2.1

<CreateAccountWindow>:
    name: "CreateAccount"
    canvas.before:
        Color:
            rgba: (171/255, 196/255, 212/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        size: root.width, root.height

        padding: 150
        spacing: 50

        Image:
            source: '../images/petpals_logo.png'
            allow_stretch: True
            keep_ratio: True
        GridLayout:
            cols:2


            Label:
                text: "Please enter your name:"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                multiline:False
            Label:
                text: "Please enter your E-mail:"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                multiline:False
            Label:
                text: "Please enter a password:"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                multiline:False
            Label:
                text: "Please confirm your password:"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                multiline:False

        Button:
            text: "Create Account"
            size_hint_y: None
            height:70
            font_size: 30
            background_normal: ''
            background_color: (0, 187/255, 224/255, 1)
            on_release:
                app.root.current = "landing"
                root.manager.transition.direction = "left"

        Button:
            text: "Back To Login"
            size_hint_y: None
            height:70
            font_size: 30
            background_normal: ''
            background_color: (222/255, 23/255, 63/255, 1)
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "right"