#:kivy 2.2.1

<LoginBoxLayout>

    email_input: email_input
    password_input: password_input

    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'

        # Login form fields
        GridLayout:
            cols: 2

            # Email
            Label:
                text: 'Email: '
            TextInput:
                id: email_input
                multiline: False

            # Password
            Label:
                text: 'Password: '
            TextInput:
                id: password_input
                multiline: False

        # Submit login form
        Button:
            text: 'Login'
            on_press: root.login()

        # Go to Create Account page
        Button:
            text: 'Sign Up'
            # DUMMY: no backend functionality