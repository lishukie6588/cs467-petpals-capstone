<admin_update_news@Screen>:
 
    name: "admin_update_news"
    on_pre_enter:
        root.getNews()
   
    MDCard: # background
        md_bg_color: (171/255, 196/255, 212/255, 1)
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        # elevation: 10
        # padding: 25
        # spacing: 25
        orientation: 'vertical'

    MDBoxLayout: # new summary container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [10,10,10,10]
        size_hint_x: 0.8
        size_hint_y: 0.85
        pos_hint: {"center_x": 0.5, "center_y": 0.525}

        MDTextField: # news summary
            id: news_content
            md_bg_color: (0/255,0/255,0/255,1)
            #theme_text_color: "Primary"
            text: ""
            text_color: 0/255,0/255,0/255,1
            size_hint_x: 1
            size_hint_y: 1
            multiline: True
            readonly: False
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDBoxLayout: # cancel container

        md_bg_color: 222/255,23/255,63/255,1
        radius: [10,0,0,10]

        size_hint_x: 4/15
        size_hint_y: 0.1
        pos_hint: {"center_x": 0.235, "center_y": 0.1}

        MDRectangleFlatButton:
            line: 4
            line_color: 222/255,23/255,63/255,1
            md_bg_color: 222/255,23/255,63/255,1
            text_color: 255/255,255/255,255/255,1
            text: "CANCEL"
            font_style: "Button"
            font_size: self.width * 0.17
            size_hint_x: 1
            size_hint_y: 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.toCancel()

    MDBoxLayout: # clear container

        md_bg_color: 0/255,187/255,224/255,1
        radius: [0,0,0,0]

        size_hint_x: 4/15
        size_hint_y: 0.1
        pos_hint: {"center_x": 0.5, "center_y": 0.1}

        MDRectangleFlatButton:
            line: 4
            line_color: 0/255,187/255,224/255,1
            md_bg_color: 0/255,187/255,224/255,1
            text_color: 0/255,0/255,0/255,1
            text: "CLEAR"
            font_style: "Button"
            font_size: self.width * 0.17
            size_hint_x: 1
            size_hint_y: 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.toClear()

    MDBoxLayout: # save container

        md_bg_color: 56/255,45/255,94/255,1
        radius: [0,10,10,0]

        size_hint_x: 4/15
        size_hint_y: 0.1
        pos_hint: {"center_x": 0.765, "center_y": 0.1}

        MDRectangleFlatButton:
            line: 4
            line_color: 56/255,45/255,94/255,1
            md_bg_color: 56/255,45/255,94/255,1
            text_color: 255/255,255/255,255/255,1
            text: "SAVE"
            font_style: "Button"
            font_size: self.width * 0.17
            size_hint_x: 1
            size_hint_y: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.toSave()



