<admin_update_news@Screen>:
 
    name: "admin_update_news"
    on_pre_enter:
        root.getNews()
   
    MDCard: # background
        md_bg_color: (171/255, 196/255, 212/255, 1)
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: 'vertical'

    MDBoxLayout: # news Date container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [10,10,0,0]
        size_hint_x: 0.9
        # size_hint_y: 0.05
        size_hint_y: 0.075
        pos_hint: {"center_x": 0.5, "center_y": 0.9125}

        MDTextField: # news Date
            id: news_date
            md_bg_color: (0/255,0/255,0/255,1)
            hint_text: "Date:"
            text_color: 0/255,0/255,0/255,1
            size_hint_x: 1
            size_hint_y: None
            multiline: True
            readonly: False
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDBoxLayout: # news Title container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [0,0,0,0]
        size_hint_x: 0.9
        size_hint_y: 0.075
        pos_hint: {"center_x": 0.5, "center_y": 0.8475}

        MDTextField: # news Title
            id: news_title
            md_bg_color: (0/255,0/255,0/255,1)
            hint_text: "Title:"
            text_color: 0/255,0/255,0/255,1
            size_hint_x: 1
            size_hint_y: None
            multiline: True
            readonly: False
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDBoxLayout: # news summary container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [0,0,0,0]
        size_hint_x: 0.9
        # size_hint_y: 0.691125
        size_hint_y: 0.69
        pos_hint: {"center_x": 0.5, "center_y": 0.465}

        MDTextField: # news summary
            id: news_body
            md_bg_color: (0/255,0/255,0/255,1)
            hint_text: "News summary:"
            text: ""
            text_color: 0/255,0/255,0/255,1
            size_hint_x: 1
            size_hint_y: 1
            multiline: True
            readonly: False
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDBoxLayout: # << container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [0,0,0,0]

        # size_hint_x: 4/10
        size_hint_x: 4/15 * 9/8
        size_hint_y: 0.05
        # pos_hint: {"center_x": 0.3, "center_y": 0.125}
        # pos_hint: {"center_x": 0.235, "center_y": 0.125}
        pos_hint: {"center_x": 0.2, "center_y": 0.125}

        MDRectangleFlatButton:
            line: 4
            line_color: (255/255,233/255,234/255,1)
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 0/255,0/255,0/255,0.5
            text: "<<"
            font_style: "Button"
            font_size: self.height * 1.5
            size_hint_x: 1
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.prev()

            # MDIconButton:
            #     icon: "arrow-left"
            #     user_font_size: "24sp"
            #     pos_hint: {'center_y': 0.5}


    MDBoxLayout: # home (admin-landing) container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [0,0,0,0]

        # size_hint_x: 4/10
        size_hint_x: 4/15 * 9/8
        size_hint_y: 0.05
        # pos_hint: {"center_x": 0.3, "center_y": 0.125}
        pos_hint: {"center_x": 0.5, "center_y": 0.125}

        MDRectangleFlatButton:
            line: 4
            line_color: (255/255,233/255,234/255,1)
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 0/255,0/255,0/255,0.5
            # text: "<<"
            # font_style: "Button"
            # font_size: self.height * 1.5
            size_hint_x: 1
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDIconButton:
                icon: "home"
                user_font_size: "24sp"
                pos_hint: {'center_y': 0.5}
                on_press: app.root.current = "admin_landing"


    MDBoxLayout: # >> container

        md_bg_color: (255/255,233/255,234/255,1)
        radius: [0,0,0,0]

        # size_hint_x: 4/10
        size_hint_x: 4/15 * 9/8
        size_hint_y: 0.05
        # pos_hint: {"center_x": 0.765, "center_y": 0.125}
        pos_hint: {"center_x": 0.8, "center_y": 0.125}

        MDRectangleFlatButton:
            line: 4
            line_color: (255/255,233/255,234/255,1)
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 0/255,0/255,0/255,0.5
            text: ">>"
            font_style: "Button"
            font_size: self.height * 1.5
            size_hint_x: 1
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.next()

            # MDIconButton:
            #     icon: "arrow-right"
            #     user_font_size: "24sp"
            #     pos_hint: {'center_y': 0.5}

    MDBoxLayout: # cancel container

        md_bg_color: 0/255,187/255,224/255,1
        radius: [0,0,0,10]

        size_hint_x: 4/15 * 9/8 # 0.3
        size_hint_y: 0.05
        pos_hint: {"center_x": 0.2, "center_y": 0.075}

        MDRectangleFlatButton:
            line: 4
            line_color: 0/255,187/255,224/255,1
            md_bg_color: 0/255,187/255,224/255,1
            text_color: 255/255,255/255,255/255,1
            # text: "CANCEL"
            # font_style: "Button"
            # font_size: self.width * 0.17
            size_hint_x: 0.8
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            # on_press: root.toCancel()

            MDIconButton:
                icon: "arrow-left"
                user_font_size: "24sp"
                pos_hint: {'center_y': 0.5}
                on_press: root.toCancel()


    MDBoxLayout: # clear container

        md_bg_color: 222/255,23/255,63/255,1
        radius: [0,0,0,0]

        size_hint_x: 4/15 * 9/8
        size_hint_y: 0.05
        pos_hint: {"center_x": 0.5, "center_y": 0.075}

        MDRectangleFlatButton:
            line: 4
            line_color: 222/255,23/255,63/255,1
            md_bg_color: 222/255,23/255,63/255,1
            text_color: 0/255,0/255,0/255,1
            # text: "CLEAR"
            # font_style: "Button"
            # font_size: self.width * 0.17
            size_hint_x: 0.4
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            # on_press: root.toClear()

            MDIconButton:
                icon: "delete"
                user_font_size: "24sp"
                pos_hint: {'center_y': 0.5}
                on_press: root.toClear()

    MDBoxLayout: # save container


        md_bg_color: 0/255,187/255,224/255,1
        radius: [0,0,10,0]

        size_hint_x: 4/15 * 9/8
        size_hint_y: 0.05
        pos_hint: {"center_x": 0.8, "center_y": 0.075}

        MDRectangleFlatButton:
            line: 4
            # line_color: 56/255,45/255,94/255,1
            # md_bg_color: 56/255,45/255,94/255,1
            line_color: 0/255,187/255,224/255,1
            md_bg_color: 0/255,187/255,224/255,1
            text_color: 255/255,255/255,255/255,1
            # text: "SAVE"
            # font_style: "Button"
            # font_size: self.width * 0.17
            size_hint_x: 0.8
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            # on_press: root.toSave()

            MDIconButton:
                icon: "bookmark"
                user_font_size: "24sp"
                pos_hint: {'center_y': 0.5}
                on_press: root.toSave()


