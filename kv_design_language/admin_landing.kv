#:include kv_design_language/admin_update_news.kv
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
    transition: SlideTransition(direction='up')

    Screen:
        name: "admin_landing"

        MDCard:
            md_bg_color: (171/255, 196/255, 212/255, 1)
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'

        MDRoundFlatButton:
            
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 56/255,45/255,94/255,1
            text: "Update News"
            font_style: "Button"
            font_size: self.width * 0.065
            size_hint_x: 0.85
            size_hint_y: 0.275
            pos_hint: {"center_x": 0.5, "center_y": 0.775}
            on_press: app.root.current = "admin_update_news"

        MDRoundFlatButton:
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 56/255,45/255,94/255,1
            radius: [45,45,45,45]
            text: "Add Animal"
            font_style: "Button"
            font_size: self.width * 0.065
            size_hint_x: 0.65
            size_hint_y: 0.125
            pos_hint: {"center_x": 0.5, "center_y": 0.33}
            on_release: app.toAddAnimal()

        MDRoundFlatButton:
            md_bg_color: (255/255,233/255,234/255,1)
            text_color: 56/255,45/255,94/255,1
            text: "Edit/Delete Animal"
            font_style: "Button"
            font_size: self.width * 0.065
            size_hint_x: 0.65
            size_hint_y: 0.125
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release: app.toEditDeleteAnimal()

    admin_update_news:

















