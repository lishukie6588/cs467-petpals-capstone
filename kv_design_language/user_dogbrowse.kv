#:kivy 2.2.1
#:import Factory kivy.factory.Factory

<Dog1>
    name: "dog1"
    Screen:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		Carousel:
			direction: "right"

			Image:
				source: '/Users/KristyKha_1/Desktop/PetPals_logo.png'
			Image:
				source: '/Users/KristyKha_1/Desktop/landing_news.png'

            GridLayout:
                cols:1
                size: root.width, root.height

                padding: 150
                spacing: 50

                Label:
                    text: "Breed: Cavapoo \nAvailability: Available! \nI would love a furever home!"
                    color: (56/255, 45/255, 94/255, 1)
                    background_color: (255/255, 233/255, 234/255, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    font_size: 35
                    pos_hint: {"center_x": 0.5, "center_y": .75}
                Button:
                    text: "Back To Browse"
                    size_hint: .3, .3
                    font_size: 50
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    background_normal: ''
                    background_color: (222/255, 23/255, 63/255, 1)
                    on_release:
                        app.root.current = "dogbrowse"
                        root.manager.transition.direction = "right"



<DogBrowseWindow>:

    name_input: name_input
    email_input: email_input
    password_input: password_input

    name: "dogbrowse"
    Screen:

        MDBottomNavigation:
            panel_color: (255/255, 233/255, 234/255, 1)

            MDBottomNavigationItem:
                name: 'dogpage'
                text: "Browse Dogs"
                icon: "dog"
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()

                GridLayout:
                    cols:3
                    rows:3
                    padding: 150
                    spacing: 30
                    Button:
                        text:"1"
                        on_release:
                            app.root.current = "dog1"
                            root.manager.transition.direction = "left"
                    Button:
                        text:"2"
                    Button:
                        text:"3"
                    Button:
                        text:"4"
                    Button:
                        text:"5"
                    Button:
                        text:"6"
                    Button:
                        text:"7"
                    Button:
                        text:"8"
                    Button:
                        text:"9"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home Page'
                icon: 'home'
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        padding: 20
                        FitImage:
                            source: '../images/petpals_logo.png'
                            size_hint: None, None
                            size: 250, 250
                            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                MDRectangleFlatButton:
                    text: root.news_title + '\n' + root.news_body
                    font_size: 20
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.5
                    height: root.height*0.25
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}

                MDFillRoundFlatButton:
                    text: "Dogs"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.35}
                    on_release:
                        app.root.current = "dogbrowse"
                        root.manager.transition.direction = "left"

                MDFillRoundFlatButton:
                    text: "Cats"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}

                MDFillRoundFlatButton:
                    text: "Other"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.15}


            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'

                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 70
                    spacing: 30

                    GridLayout:
                        cols:2
                        size: root.width, root.height

                        padding: 15
                        spacing: 25


                        Label:
                            text: "Change your name? \nPlease enter your new name:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: name_input
                            multiline:False
                        Label:
                            text: "Change email? \nPlease enter your new E-mail:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: email_input
                            multiline:False
                        Label:
                            text: "Change password? \nPlease enter your current password:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: password_input
                            multiline:False

                    Button:
                        text: "Submit Changes"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (0, 187/255, 224/255, 1)
                        on_press: root.update_account()
                        on_release:
                            root.cleardelete()
                            root.clearchange()
                            root.press_change()

                    Button:
                        text: "Log Out"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (0, 187/255, 224/255, 1)
                        on_press: root.logout()
                        on_release:
                            root.clearchange()
                            root.cleardelete()
                            app.root.current = "login"
                            root.manager.transition.direction = "right"

                    Button:
                        text: "Delete Account"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (222/255, 23/255, 63/255, 1)
                        on_press: root.delete_account()
                        on_release:
                            root.clearchange()
                            root.cleardelete()
                            root.press_delete()
                            # PLACEHOLDER: should also go back to login screen?

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Liked List'
                icon: 'paw'
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()

                Label:
                    text: "will fill later"


        Widget:
            size_hint_y: None
            height: 10