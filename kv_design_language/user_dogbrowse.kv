#:kivy 2.2.1
#:import Factory kivy.factory.Factory

<DogProfile>
    name: "dogprofile"
    Screen:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		Carousel:
			direction: "right"

            GridLayout:
                cols:1
                size: root.width, root.height

                padding: 150
                spacing: 50

                Label:
                    text: "Breed: Cavapoo \nAvailability: Available! \nI would love a furever home!"
                    color: (56/255, 45/255, 94/255, 1)
                    background_color: (255/255, 233/255, 234/255, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    font_size: 35
                    pos_hint: {"center_x": 0.5, "center_y": .75}
                Button:
                    text: "Add to Liked List"
                    size_hint: .3, .3
                    font_size: 50
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    background_normal: ''
                    background_color: (0, 187/255, 224/255, 1)
                Button:
                    text: "Back To Browse"
                    size_hint: .3, .3
                    font_size: 50
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    background_normal: ''
                    background_color: (222/255, 23/255, 63/255, 1)
                    on_release:
                        app.root.current = "dogbrowse"
                        root.manager.transition.direction = "right"

			Image:
				source: '/Users/KristyKha_1/Desktop/PetPals_logo.png'
			Image:
				source: '/Users/KristyKha_1/Desktop/landing_news.png'



<DogBrowseWindow>:

    name_input: name_input
    email_input: email_input
    password_input: password_input

    name: "dogbrowse"
    Screen:

        MDBottomNavigation:
            panel_color: (255/255, 233/255, 234/255, 1)

            MDBottomNavigationItem:
                name: 'dogpage'
                text: "Browse Dogs"
                icon: "dog"
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 150
                    spacing: 50
                    Button:
                        text:"Show Results"
                        size_hint_y: None
                        height:80
                        font_size: 30
                        background_normal: ''
                        background_color: (222/255, 23/255, 63/255, 1)
                        on_release:
                            root.add_dog()
                    GridLayout:
                        id: grid
                        cols:2
                        padding: 150
                        spacing: 30
                    Button:
                        text: "Back To Search"
                        size_hint_y: None
                        height:80
                        font_size: 30
                        background_normal: ''
                        background_color: (222/255, 23/255, 63/255, 1)
                        on_release:
                            app.root.current = "dogsearch"
                            root.manager.transition.direction = "right"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home Page'
                icon: 'home'
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        padding: 20
                        FitImage:
                            source: '../images/petpals_logo.png'
                            size_hint: None, None
                            size: 250, 250
                            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                MDRectangleFlatButton:
                    text: root.news_title + '\n' + root.news_body
                    font_size: 20
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.5
                    height: root.height*0.25
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}

                MDFillRoundFlatButton:
                    text: "Dogs"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.35}
                    on_release:
                        app.root.current = "dogbrowse"
                        root.manager.transition.direction = "left"

                MDFillRoundFlatButton:
                    text: "Cats"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}

                MDFillRoundFlatButton:
                    text: "Other"
                    font_size: 12
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.2
                    height: root.height*0.05
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.15}


            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'

                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 70
                    spacing: 30

                    GridLayout:
                        cols:2
                        size: root.width, root.height

                        padding: 15
                        spacing: 25


                        Label:
                            text: "Change your name? \nPlease enter your new name:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: name_input
                            multiline:False
                        Label:
                            text: "Change email? \nPlease enter your new E-mail:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: email_input
                            multiline:False
                        Label:
                            text: "Change password? \nPlease enter your current password:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: password_input
                            multiline:False

                    Button:
                        text: "Submit Changes"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (0, 187/255, 224/255, 1)
                        on_press: root.update_account()
                        on_release:
                            root.cleardelete()
                            root.clearchange()
                            root.press_change()

                    Button:
                        text: "Log Out"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (0, 187/255, 224/255, 1)
                        on_press: root.logout()
                        on_release:
                            root.clearchange()
                            root.cleardelete()
                            app.root.current = "login"
                            root.manager.transition.direction = "right"

                    Button:
                        text: "Delete Account"
                        size_hint_y: None
                        height:45
                        font_size: 20
                        background_normal: ''
                        background_color: (222/255, 23/255, 63/255, 1)
                        on_press: root.delete_account()
                        on_release:
                            root.clearchange()
                            root.cleardelete()
                            root.press_delete()
                            # PLACEHOLDER: should also go back to login screen?

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Liked List'
                icon: 'paw'
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()

                Label:
                    text: "will fill later"


        Widget:
            size_hint_y: None
            height: 10

<DogSearch>
    name: "dogsearch"
    canvas.before:
        Color:
            rgba: (171/255, 196/255, 212/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 150
        spacing: 50
        Label:
            text: "Search For Dogs by Breed, Disposition, and Recency"
            color: (56/255, 45/255, 94/255, 1)
            background_color: (255/255, 233/255, 234/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        GridLayout:
            cols: 2

            Label:
                text: "Golden Retriever"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                on_active: root.checkbox_breed(self, self.active, "Golden Retriever")
            Label:
                text: "Poodle"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                on_active: root.checkbox_breed(self, self.active, "Poodle")

            Label:
                text: "Good with other animals"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                on_active: root.checkbox_disposition(self, self.active, "Good with other animals")
            Label:
                text: "Good with children"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                on_active: root.checkbox_disposition(self, self.active, "Good with children")
            Label:
                text: "Animal must be leashed at all times"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                on_active: root.checkbox_disposition(self, self.active, "Animal must be leashed at all times")

            Label:
                text: "List by most recent"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                group: "recency"
                on_active: root.checkbox_recency(self, self.active, "most recent")
            Label:
                text: "List by least recent"
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                font_size: 30
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                group: "recency"
                on_active: root.checkbox_recency(self, self.active, "least recent")

        Button:
            id: 'add dog'
            text: "Search Now"
            size_hint_y: None
            height:70
            font_size: 30
            background_normal: ''
            background_color: (0, 187/255, 224/255, 1)
            on_release:
                app.root.current = "dogbrowse"
                root.manager.transition.direction = "left"
        Button:
            text: "Back To Home"
            size_hint_y: None
            height:70
            font_size: 30
            background_normal: ''
            background_color: (222/255, 23/255, 63/255, 1)
            on_release:
                app.root.current = "landing"
                root.manager.transition.direction = "right"