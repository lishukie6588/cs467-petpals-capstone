#:kivy 2.2.1

<ViewAccountBoxLayout>

    name_input: name_input
    email_input: email_input
    password_input: password_input

    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'

        # Navigate to Landing page
        Button:
            text: 'Back to Landing page'
            # DUMMY: no backend functionality

        # Empty Separator
        Label:

        # Edit Information title
        Label:
            text: 'Edit Information'
        # Update Account form
        GridLayout:
            cols: 2
            # Name field
            Label:
                text: 'New Name: '
            TextInput:
                id: name_input
                multiline: False
            # Email field
            Label:
                text: 'New Email: '
            TextInput:
                id: email_input
                multiline: False
            # Password field
            Label:
                text: 'New Password: '
            TextInput:
                id: password_input
                multiline: False
            # Submit form
            Label:
            Button:
                text: 'Submit'
                on_press: root.update_account()

        # Empty Separator
        Label:

        # Log Out
        Button:
            text: 'Log Out'
            # DUMMY: no backend functionality

        # Empty Separator
        Label:

        # Delete Account
        Button:
            text: 'Delete Account'
            on_press: root.delete_account()
