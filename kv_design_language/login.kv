#:kivy 2.2.1

<LoginWindow>:

    email_input: email_input
    password_input: password_input

    name: "login"
    Screen:

        MDCard: # background
            md_bg_color: (171/255, 196/255, 212/255, 1)
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: (171/255, 196/255, 212/255, 1)
            size_hint: .7,.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            Image:
                source: './images/petpals_logo.png'
                size_hint: .9,.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.4
            size_hint_y: 0.120
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            MDTextField:
                mode: "round"
                id: email_input
                hint_text: "Enter E-mail"
                icon_right: "account"
                font_size: self.width * 0.065
                size_hint_x: .4
                size_hint_y: 0.6
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.4
            size_hint_y: 0.120
            pos_hint: {"center_x": 0.5, "center_y": 0.35}

            MDTextField:
                mode: "round"
                id: password_input
                hint_text: "Enter Password"
                icon_right: "eye-off"
                font_size: self.width * 0.065
                size_hint_x: .4
                size_hint_y: 0.6
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                password: True

        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.5
            size_hint_y: 0.130
            pos_hint: {"center_x": 0.5, "center_y": 0.23}

            MDFillRoundFlatButton:
                text: "Log In"
                text_color: (1,1,1,1)
                font_style: "Button"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.65
                md_bg_color: (0, 187/255, 224/255, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release:
                    root.login()
        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.5
            size_hint_y: 0.130
            pos_hint: {"center_x": 0.5, "center_y": 0.13}

            MDFillRoundFlatButton:
                text: "Create Account"
                text_color: (1,1,1,1)
                font_style: "Button"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.65
                md_bg_color: (0, 187/255, 224/255, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release:
                    root.clear_labels()
                    app.root.current = "CreateAccount"
                    root.manager.transition.direction = "left"


        Widget:
            size_hint_y: None
            height: 10