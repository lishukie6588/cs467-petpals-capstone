<LoginWindow>:
    name: "login"
    Screen:
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: (171/255, 196/255, 212/255, 1)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                padding: 20
                FitImage:
                    source: '/Users/KristyKha_1/Desktop/PetPals_logo.png'
                    size_hint: None, None
                    size: 400, 400
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}

        MDTextField:
            mode: "round"
            id: user
            hint_text: "Enter E-mail"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 20
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

        MDTextField:
            mode: "round"
            id: password
            hint_text: "Enter Password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 20
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            password: True

        MDFillRoundFlatButton:
            text: "Log In"
            font_size: 12
            text_color: (1,1,1,1)
            size_hint: None, None
            width: root.width*0.2
            height: root.height*0.05
            md_bg_color: (222/255, 23/255, 63/255, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            on_release:
                app.root.current = "landing"
                root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
            text: "Create Account"
            font_size: 12
            text_color: (1,1,1,1)
            size_hint: None, None
            width: root.width*0.2
            height: root.height*0.05
            md_bg_color: (0, 187/255, 224/255, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            on_release:
                app.root.current = "CreateAccount"
                root.manager.transition.direction = "left"
            

        Widget:
            size_hint_y: None
            height: 10